# Backend Environment Variables for Render
# Copy these to Render dashboard environment variables

# Server Configuration
PORT=4000
NODE_ENV=production

# MongoDB Atlas Connection String
# Get this from: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/cravecart?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_atlas_connection_string_here

# JWT Secret (generate a random 32+ character string)
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_characters

# CORS Origins (comma-separated)
CORS_ORIGIN=https://cravecart-frontend.onrender.com,https://cravecart-admin.onrender.com,https://yourdomain.com

# Stripe Payment Gateway (optional)
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here

# Cloudinary Image Storage (optional)
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Session Secret
SESSION_SECRET=your_session_secret_key_min_32_chars

# Logging
LOG_LEVEL=info

# API Configuration
API_TIMEOUT=30000
