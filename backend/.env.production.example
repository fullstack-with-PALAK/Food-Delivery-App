# Production Environment Variables for Backend

# Server Configuration
PORT=4000
NODE_ENV=production

# Database
MONGODB_URI=your_mongodb_production_uri_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars

# Password Hashing
SALT=10

# Stripe Payment
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CORS Configuration
CORS_ORIGIN=https://cravecart.com,https://www.cravecart.com
ALLOWED_ORIGINS=https://cravecart.com,https://www.cravecart.com

# Admin Configuration
ADMIN_KEY=your_secure_admin_key_here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Frontend URL (for redirects, emails, etc.)
FRONTEND_URL=https://cravecart.com
